//code
//library contains all of functions that you may use
#include <bits/stdc++.h>
using namespace std;
//main function
int main()
{
    int k,s,counter=0;
    cin>>k>>s;
    for(int i=0;i<=k;i++)
        for(int j=0;j<=k;j++)
           {
              if(s-i-j>=0 && s-i-j<=k)
                 counter++;
           }
           cout<<counter;
   return 0;
}

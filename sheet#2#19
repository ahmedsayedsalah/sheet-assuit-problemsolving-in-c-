//code
//library contains all of functions that you may use
#include <bits/stdc++.h>
using namespace std;
//main function
int main()
{
    int N;
    cin>>N;
    while(N--)
    {
        int n,m,sumodd=0; //loop for number of test cases
        cin>>n>>m;
        for(int i=min(n,m)+1;i<max(n,m);i++) //loop for numbers from n to m and Vice Versa.
        {
            if(i%2)  //check that is odd or not
            sumodd+=i;
        }
        cout<<sumodd<<endl;
    }
   return 0;
}

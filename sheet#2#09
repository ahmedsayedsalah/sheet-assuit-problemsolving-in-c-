//code
#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n,b=0;
    cin>>n;
    int c=n;
    while(n!=0)
    {
        b= (b*10)+(n%10)/*لاظهار اخر رقم*/;
        n/=10; //لا خفاء اخر رقم
    }
    if(c==b)
        cout<<b<<"\nYES";
    else
        cout<<b<<"\nNO";

    return 0;
}

//code
//library contains all of functions that you may use
#include <bits/stdc++.h>
using namespace std;
//main function
int main()
{
    int n;
    cin>>n; //4
    for(int i=1;i<=n;i++) // {1,2,3,4}
    {
        for(int j=i;j<n;j++) // {1-3,2-3,3-3,4-3}
            cout<<" ";
        for(int k=1;k<(2*i);k++) // {1-1,1-3,1-5,1-7}
            cout<<"*";
        cout<<endl;
    }
   return 0;
}

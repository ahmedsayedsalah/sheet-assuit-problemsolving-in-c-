//code
//library contains all of functions that you may use
#include <bits/stdc++.h>
using namespace std;
//main function
int main()
{
    int n,b=0;
    cin>>n;
    for(int c=1;c<=n;c++)
    {
        long long a,counter=0; //18 24  7
        cin>>a;
        while(a%2==0)
        {
            counter++;         //1  3   0
            a/=2;
        }
        if(b<counter)
            b=counter;
    }
    cout<<b;
   return 0;
}
